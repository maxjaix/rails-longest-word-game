<h1>New game</h1>
<div class="container">
  <% @letters.each do |letter| %>
    <div class= 'letter'>
      <%= letter %>
    </div>
  <% end %>
</div>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="score" value="<%= params[:word]" placeholder="What is the longest word you can find?">
  <input type="submit" value="Play">
</form>


